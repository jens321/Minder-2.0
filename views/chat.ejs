<% include header %>

<body>

    <!-- NAVIGATION -->
    <nav class = "navbar navbar-expand-lg navbar-light bg-light">
        <a class = "navbar-brand" href = "/">Minder</a>
        <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target = "#navbarNav" aria-controls = "navbarNav" aria-expanded = "false" aria-label = "Toggle navigation">
            <span class = "navbar-toggler-icon"></span>
        </button>
        <div class = "collapse navbar-collapse" id = "navbarNav">
            <ul class = "navbar-nav">
                <li class = "nav-item">
                    <a class = "nav-link" href = "discovery">Discovery</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link active" href = "chat">Chat <span class = "sr-only">(current)</span></a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "profile">Profile</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "#">Notif</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class = "container">
        <div class = "row">
            <div class = "col-md-4">
                <ul class="list-group friend-list">
                    <% for (var i = 0; i < friends.length; ++i) { %>
                    <li class="list-group-item friend" data-id = "<%= friends[i]._id %>"><%= friends[i].name %></li>
                    <% } %>
                </ul>
            </div>
            <div class = "col-md-8" id = "message-container">
                <div class = "message-area"></div>
                <input type = "text" class = "form-control" id = "message-bar"/>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

    <script src = "/javascripts/chat.js"></script>

<% include footer %>
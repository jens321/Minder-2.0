<% include header %>

<body>

    <!-- NAVIGATION -->
    <nav class = "navbar navbar-expand-lg navbar-light bg-light">
        <a class = "navbar-brand" href = "/">Minder</a>
        <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target = "#navbarNav" aria-controls = "navbarNav" aria-expanded = "false" aria-label = "Toggle navigation">
            <span class = "navbar-toggler-icon"></span>
        </button>
        <div class = "collapse navbar-collapse" id = "navbarNav">
            <ul class = "navbar-nav">
                <li class = "nav-item">
                    <a class = "nav-link" href = "discovery">Discovery</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link active" href = "chat">Chat <span class = "sr-only">(current)</span></a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "profile">Profile</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "#">Notif</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class = "container">
        <div class = "row">
            <div class = "col-md-4">
                <ul class="list-group">
                    <% for (var i = 0; i < friends.length; ++i) { %>
                    <li class="list-group-item" data-id = "<%= friends[i]._id %>"><%= friends[i].name %></li>
                    <% } %>
                </ul>
            </div>
            <div class = "col-md-8">
                <input type = "text" class = "form-control" id = "message-bar"/>
            </div>
        </div>
    </div>

<% include footer %>
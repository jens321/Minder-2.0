<% include header %>

  <body>

    <!-- NAVIGATION -->
    <nav class = "navbar navbar-expand-lg navbar-light bg-light">
        <a class = "navbar-brand" href = "/">Minder</a>
        <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target = "#navbarNav" aria-controls = "navbarNav" aria-expanded = "false" aria-label = "Toggle navigation">
            <span class = "navbar-toggler-icon"></span>
        </button>
        <div class = "collapse navbar-collapse" id = "navbarNav">
            <ul class = "navbar-nav">
                <li class = "nav-item">
                    <a class = "nav-link active" href = "discovery">Discovery <span class = "sr-only">(current)</span></a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "chat">Chat</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "profile">Profile</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "#">Notif</a>
                </li>
                <li class = "nav-item">
                    <a class = "nav-link" href = "logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class = "container">
        <div class = "row">
            <div class = "col-md-12">
                <input type = "text" placeholder = "Search for people" class = "form-control" id = "search-bar">
            </div>
        </div>
        <div class = "row user-list">
            <% for (var i = 0; i < people.length; ++i) { %>
                <div class = "col-md-4">
                    <div class = "card view-card">
                        <a href = "/users/<%=people[i]._id%>"><img class="card-img-top" src="<%= people[i].imageUrlPath %>" alt="Card image cap"></a>
                        <div class = "card-body">
                            <h3 class = "card-title" id = "name-view"><%= people[i].name %></h3>
                            <p class = "card-text" id = "description-view"><%= people[i].description %></p>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

    <!-- CUSTOM SCRIPTS -->
    <script src = "/javascripts/search.js"></script>
    
    <% include footer %>

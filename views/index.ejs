<% include header %>

  <body>
    <div class = "container-fluid index-container">
      <div class = "pseudo"></div>
      <div class = "row">
        <div class = "col-md-12 text-center">
          <h1>Minder</h1>
          <button type = "button" class = "btn btn-primary" id = "signup-button">Signup</button>
          <button type = "button" class = "btn btn-primary" id = "login-button">Login</button>
        </div>
      </div>

      <!-- SIGNUP/LOGIN MODAL -->
      <div class = "row">
        <div class = "offset-md-3 col-md-6">
          <form class = "signup-form" method = "post">
            <h2>Signup</h2>
            <div class = "form-group">
              <label for = "name">Name</label>
              <input type = "text" class = "form-control" id = "signup-name" placeholder = "Please enter your name">
            </div>
            <div class = "form-group">
              <label for = "email">Email address</label>
              <input type = "email" class = "form-control" id = "signup-email" placeholder = "Enter email">
            </div>
            <div class = "form-group">
              <label for = "password">Password</label>
              <input type = "password" class = "form-control" id = "signup-password" placeholder = "Password">
            </div>
            <button type = "submit" class = "btn btn-primary" id = "signup-submit-button">Submit</button>
          </form>

          <form class = "login-form" method = "post">
            <h2>Login</h2>
            <div class = "form-group">
              <label for = "email">Email address</label>
              <input type = "email" class = "form-control" id = "login-email" placeholder = "Enter email">
            </div>
            <div class = "form-group">
              <label for = "password">Password</label>
              <input type = "password" class = "form-control" id = "login-password" placeholder = "Password">
            </div>
            <button type = "submit" class = "btn btn-primary" id = "login-submit-button">Submit</button>
          </form>
        </div>
      </div>
      <div class = "row">
        <div class = "offset-md-3 col-md-6 error-messages">
        </div>
      </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
      
    <!-- CUSTOM SCRIPTS -->
    <script src = "javascripts/modal.js"></script>
    <script src = "javascripts/form-handling.js"></script>
  
    <% include footer %>
